

<header>

  <div class="container">

    <nav class="horizontal-nav">
      <ul>
        <li><a href="#bio" class="scroll">About Me</a></li>
        <li><a href="#portfolio" class="scroll">Portfolio</a></li>
        <li><a href="#blog" class="scroll">Blog</a></li>
        <li><a href="#contact" class="scroll">Contact Me</a></li>
      </ul>
    </nav>

    <%= image_tag "smaller.jpg", :class => "center" %>

    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <h1 class="center">Lukas Jones</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <h4 class="center">Full Stack Developer</h4>
      </div>
    </div>

  </div>
  <a class="scroll" href="#bio">
    <%= image_tag "down_arrow.png", :class => "nav-circle" %>
  </a>
</header>

<section id="bio">
  <div class="bio-overlay">

    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <button class="ghost-button">
          Read My Bio
        </button>
      </div>

    </div>
      

    <a class="scroll" href="#portfolio">
      <%= image_tag "down_arrow.png", :class => "nav-circle" %>
    </a>

  </div>
</section>

<section id="portfolio">

  <div class="portfolio-overlay">
  
      <%= link_to welcome_projects_path do %>
        <button class="ghost-button">
          Check Out My Projects
        </button>
      <% end %>

    <a class="scroll" href="#blog">
      <%= image_tag "down_arrow.png", :class => "nav-circle" %>
    </a>
  </div>
</section>

<section id="blog">
  <div class="blog-overlay">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
      
            <%= link_to blogs_path do %>
              <button class="ghost-button">
                Read my Blog
              </button>
            <% end %>
      </div>
    </div>

    <a class="scroll" href="#contact">
      <%= image_tag "down_arrow.png", :class => "nav-circle" %>
    </a>

  </div>
  
</section>

<section id="contact">

    <%= form_for @contact, :html => {:class => "pure-form"} do |f| %>
      <fieldset class="contact contact-top">
        <%= f.text_field :email, :class => "pure-input-1-2", :placeholder => "Your Email" %>
        <%= f.text_area :content, :class => "pure-input-1-2", :rows => '9', :placeholder => "Say hello!" %>
      </fieldset>
        <%= f.submit "submit", :class => "pure-button pure-input-1-2 pure-button-primary" %>
    <% end %>

</section>



