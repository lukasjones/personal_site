<header>
<div class="sm-line"></div>

  <div class="container">


    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <%= image_tag "smaller.jpg", :class => "center" %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <h1 class="center">Lukas Jones</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
