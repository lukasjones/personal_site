
<header>

  <div class="container">

    <nav class="horizontal-nav">
      <ul>
        <li><a href="#bio" class="scroll">About Me</a></li>
        <li><a href="#portfolio-blog" class="scroll">Portfolio/Blog</a></li>
        <li><a href="#contact" class="scroll">Contact Me</a></li>
      </ul>
    </nav>

    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <%= image_tag "smaller.jpg", :class => "center" %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <h1 class="center">Lukas Jones</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <h4 class="center">Full Stack Developer</h4>
      </div>
    </div>

  </div>
  <a class="scroll" href="#bio">
    <%= image_tag "down_arrow.png", :class => "nav-circle" %>
  </a>
</header>

<section id="bio">

  <h1 class="center padded">
    About Me
  </h1>
  <div class="row">
    <div class="col-lg-3 col-md-3 col-sm-12"></div>
    <div class="col-lg-6 col-md-6 col-sm-12">
      <p class="about-me-p">
        I'm a full stack web developer with a passion for writing sustainable code.  I love building websites and apps from the ground up.  In my spare time I like to dive into new programming languages, read other peoples code and rock climb!
      </p>
    </div>
  </div>
  <h1 class="center padded">
    Skills
  </h1>
  <div class="row">
    <div class="col-lg-3 col-md-3 col-sm-12"></div>
    <div class="col-lg-6 col-md-6 col-sm-12">
      <%= image_tag "html.jpg", :class => "skill" %>
      <%= image_tag "css3.png", :class => "skill" %>
      <%= image_tag "JavaScript.png", :class => "skill" %>
      <%= image_tag "Git-Icon.png", :class => "skill" %>
      <%= image_tag "rails-icon.png", :class => "skill" %>
      <%= image_tag "jquery-icon.png", :class => "skill" %>
    </div>
  </div>


  <a class="scroll" href="#portfolio-blog">
    <%= image_tag "down_arrow.png", :class => "nav-circle" %>
  </a>

</section>

<section id="portfolio-blog">



  <div class="row">

    <div class="col-lg-3 col-md-3 col-sm-12"></div>
    <div class="col-lg-3 col-md-3 col-sm-12">
      <%= link_to welcome_projects_path do %>
        <h1 class="center">
          Portfolio
        </h1>
        
      <% end %>
    </div>



    <div class="col-lg-3 col-md-3 col-sm-12">
      <%= link_to blogs_path do %>
        <h1 class="center">
          Blog
        </h1>

      <% end %>
    </div>
  </div>


  <a class="scroll" href="#contact">
    <%= image_tag "down_arrow.png", :class => "nav-circle" %>
  </a>

</section>

<section id="contact">

  <h1 class="center">
    Contact Me
  </h1>
  
  <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12"></div>
  <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

    <%= form_for @contact, :html => {:class => "form-horizontal"} do |f| %>
      <div class="contact contact-top">
        <%= f.text_field :email, :class => "form-control", :placeholder => "Your Email" %>
      </div>
      <div class="contact">
        <%= f.text_area :content, :class => "form-control", :rows => '9', :placeholder => "Say hello!" %>
      </div>
      <div class="contact">
        <%= f.submit "submit", :class => "btn btn-default" %>
      </div>
    <% end %>
  </div>

</section>


