<div class="blog">
  <div class="container">
    <%= link_to "<< back", root_path %>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <h1 class="center p-up blog-head-title">
          Blog
        </h1>
      </div>
    </div>  <!-- end row div -->

    <div class="row">
      <div class="col-lg-2 col-md-2 col-sm-3 col-xs-12">
        <aside>
          <p>Recent</p>
          <ul class="blog-ul">
            <% @blogs.each do |blog| %>
              <li id="<%= blog.id %>"><a href="#"><%= blog.title %></a></li>
            <% end %>
          </ul>
        </aside>
      </div>
      <div class="col-lg-10 col-md-10 col-sm-9">
        <h3 class="blog-title pull-left" id="<%= @blogs.first.id %>"><%= @blogs.first.title %></h3>
        <h4 class="blog-date pull-right"><%= @blogs.first.created_at.to_date %></h4>
        <p class="blog-content pull-left"><%= @blogs.first.content.gsub(/\n/, '<br>') %></p>
      </div>
      <div class="col-lg-10 col-md-10 col-sm-9">
        <% if session[:id] === nil %>
          <%= form_for(Comment.new) do |f| %>
            <%= f.text_field :name, :placeholder => "Your Name (optional)" %>
            <%= f.text_area  :content, :placeholder => "Comment" %>
            <%= f.submit     :Submit, :class => "btn" %>
          <% end %>
        <% end %>

        <ul class="comment_list">
          <% @blogs.first.comments.each do |comment| %>

            <li>
              <h3><%= comment.name %></h3>
              <h5><%= comment.created_at.to_date %></h5>
              <p><%= comment.content %></p>
            </li>

          <% end %>
        </ul>
      </div>
    </div>


    <% if session[:id] %>
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
          <%= form_for new_blog_path do |f| %>
            <%= f.text_field :title, :style => "width: 100%;", placeholder: "Title" %><br>
            <%= f.text_area :content, :rows => "20", :cols => "100", placeholder: "content" %>
            <%= f.submit  :Submit, :class => "btn" %>
          <% end %>
        </div>
      </div>
    <% end %>



  </div> <!-- end container div -->
</div> <!-- end blog div -->